{% extends bap.layout is defined ? bap.layout : 'OroUserBundle::layout.html.twig' %}

{% block head_script %}
    {{ parent() }}
    {% include 'OroGridBundle:Include:javascript.html.twig' with {'datagridView': datagrid, 'selector': '#users-grid'} %}
{% endblock %}

{% block page_container %}
<div class="container-fluid">
    {% block content %}
    <div class="usser-row">
        <h1>{{ 'Users'|trans }} <a class="btn btn-primary pull-right" href="{{ path('oro_user_create', { back: app.request.uri }) }}">{{ 'Create user'|trans }}</a></h1>
        <div id="users-grid"></div>
    </div>
    {% endblock %}
</div>
{% endblock %}
