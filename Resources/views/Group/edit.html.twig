{% extends bap.layout is defined ? bap.layout : 'OroUserBundle::layout.html.twig' %}

{% set title = form.vars.value.id ? 'Edit group'|trans : 'Add group'|trans %}

{% block head_script %}
    {{ parent() }}

    {% if form.vars.value.id %}
        {% include 'OroGridBundle:Include:javascript.html.twig' with {'datagridView': datagrid, 'selector': '#users-grid'} %}
        {% include 'OroGridBundle:Include:stylesheet.html.twig' %}
    {% endif %}
{% endblock %}

{% block page_container %}
<div class="container-fluid">
    {% block content %}
    <form action="{{ form.vars.value.id ? path('oro_user_group_edit', { id: form.vars.value.id }) : path('oro_user_group_create') }}" method="post" class="form-register">
        <fieldset>
            <legend>{{ title }}</legend>

            {{ form_widget(form) }}

            <div class="form-row">
                <button class="btn btn-large btn-primary" type="submit">{{ 'Save'|trans }}</button>
            </div>
        </fieldset>
    </form>

        {% if form.vars.value.id %}
        <h3>{{ 'Users'|trans }}</h3>
        <div id="users-grid"></div>
        {% endif %}
    {% endblock %}
</div>
{% endblock %}
