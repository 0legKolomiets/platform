{% extends 'OroNavigationBundle:Menu:history.html.twig' %}

{% block linkElement %}
    {%- if matcher.isCurrent(item) %}
        <a href="javascript:navigation.dotMenu.MainViewInstance.close();"{{ oro_menu.attributes(linkAttributes) }}>{{ block('label') }}</a>
    {%- else %}
        <a href="{{ item.uri }}"{{ oro_menu.attributes(linkAttributes) }}>{{ block('label') }}</a>
    {%- endif %}
{% endblock %}
