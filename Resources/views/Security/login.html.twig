{% extends bap.layout is defined ? bap.layout : 'OroUserBundle::layout.html.twig' %}

{% block content %}
<div class="container">
    {% if error %}
    <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
    {% endif %}

    <form action="{{ path('fos_user_security_check') }}" method="post" class="form-signin">
        <div class="title-box">
            <h1 class="oro-title">Oro</h1>
            <span class="divider-vertical"></span>
            <h2 class="title">{{ 'Login'|trans }}</h2>
        </div>
        <fieldset>
            <div class="input-prepend">
                <span class="add-on">{{ 'Username'|trans }}</span>
                <input type="text" id="prependedInput" class="span2" name="_username" value="{{ last_username }}" required="required" placeholder="{{ 'Username'|trans }}" />
            </div>
            <div class="input-prepend">
                <span class="add-on">{{ 'Password'|trans }}</span>
                <input type="password" id="prependedInput2" class="span2" name="_password" required="required" placeholder="{{ 'Password'|trans }}" />
            </div>
            <div class="form-row">
                <label class="checkbox">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> {{ 'Remember me on this computer'|trans }}
                </label>
            </div>
            <button type="submit" class="btn btn-large btn-primary" id="_submit" name="_submit">{{ 'Log in'|trans }}</button>
            <div class="form-row">
                <a href="#">{{ 'Forgot your username?'|trans }}</a>
                <span class="divider-vertical">|</span>
                <a href="#">{{ 'Forgot your password?'|trans }}</a>
            </div>
        </fieldset>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    </form>
</div>
{% endblock content %}