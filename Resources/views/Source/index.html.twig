{% extends bap.layout is defined ? bap.layout : 'OroDataFlowBundle::layout.html.twig' %}

{% block title %}Sources overview - {{ parent() }}{% endblock %}

{% block content %}
<h1>Sources overview <a class="btn btn-primary pull-right" href="{{ path('oro_dataflow_source_create') }}">Add new</a></h1>

{{ knp_pagination_render(pager) }}

<table class="table table-bordered table-striped table-condensed">
    <thead>
        <tr>
            <th style="width: 20px">ID</th>
            <th>Source code</th>
            <th style="width: 50px">Edit</th>
            <th style="width: 50px">Remove</th>
        </tr>
    </thead>

    <tbody>
        {% for rec in pager %}
        <tr>
            <td><a href="{{ path('oro_dataflow_source_edit', { id: rec.id }) }}" class="pull-right">{{ rec.id }}</a></td>
            <td><a href="{{ path('oro_dataflow_source_edit', { id: rec.id }) }}">{{ rec.code }}</a></td>
            <td><a href="{{ path('oro_dataflow_source_edit', { id: rec.id }) }}"><i class="icon-edit"></i></a></td>
            <td><a href="{{ path('oro_dataflow_source_remove', { id: rec.id }) }}"><i class="icon-remove"></i></a></td>
        </tr>
        {% else %}
        <tr>
            <td colspan="100%">There are no sources.</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{{ knp_pagination_render(pager) }}

{% endblock %}