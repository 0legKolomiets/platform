{% block getCollectionElementValue %}
    function getCollectionElementValue(field) {
        if ($(field).filter('input[type="checkbox"]').length) {
            value = $(field).filter(':checked').map(function(i, cb) { return $(cb).val(); }).get();
        } else if ($('input[type="checkbox"]', field).length) {
            value = $('input:checked', field).map(function(i, cb) { return $(cb).val(); }).get();
        } else if ($(field).filter('select').length) {
            value = $(field).filter('select').val();
        } else if ($('select', field).length) {
            value = $('select', field).val();
        }
        if (!value) {
            value = [];
        }
        return value;
    }
{% endblock %}

