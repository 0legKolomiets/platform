{% extends bap.layout is defined ? bap.layout : 'OroDataFlowBundle::layout.html.twig' %}

{% set title = job.id ? "Edit job" : "Create job" %}

{% block title %}{{ parent() }} - {{ title | trans }}{% endblock %}

{% block content %}

    <form action="{{ job.id ? path('oro_dataflow_job_edit', { id: job.id }) : path('oro_dataflow_job_create', { id: connector.id }) }}" method="POST">

        <fieldset>
            <legend>{{ title | trans }}</legend>
    
            {{ form_widget(form) }}
    
            <div class="form-row">
                <button class="btn btn-large btn-primary pull-right" type="submit">{{ "Save" | trans }}</button>
            </div>
        </fieldset>
    </form>

{% endblock %}
