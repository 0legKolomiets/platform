    function getComputeMessage(key, placeholders, number) {
        Translator.placeHolderPrefix = '{{ '{{' }} ';
        Translator.placeHolderSuffix = ' {{ '}}' }}';
        // Default translations
        if (!Translator.has('validators:'+key)) {
            Translator.add('validators:'+key, key);
        }

        var result = Translator.get('validators:'+key, placeholders, number);
        if (undefined == result && number != undefined) {
            // Try to get translated string without a number parameter.
            result = Translator.get('validators:'+key, placeholders);
        }
        return result;
    }

    function isNotDefined(value) {
