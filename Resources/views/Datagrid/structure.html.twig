{% block grid_filter %}
    {% if datagrid.filters %}
        <form action="{{ path(routeName) }}" method="GET">
            <fieldset>

                <table border="1" style="color: red;">
                    {% for filter in datagrid.filters %}
                    <tr>
                        <td>{{ filter.label|trans }}</td>
                        <td>{{ form_widget(form.children['_filter'].children[filter.formName].children['type']) }}</td>
                        <td>{{ form_widget(form.children['_filter'].children[filter.formName].children['value']) }}</td>
                    </tr>
                    {% endfor %}
                </table>

                {{ form_widget(form._sort_by) }}
                {{ form_widget(form.children['_pager']._page, {value : 1}) }}
                {{ form_rest(form) }}

                <input type="submit" value="{{ 'oro_grid.button.filter'|trans({}, 'OroGridBundle') }}" />

                <a href="{{ path(routeName) }}">{{ 'oro_grid.button.reset'|trans({}, 'OroGridBundle') }}</a>

            </fieldset>
        </form>
    {% endif %}
{% endblock %}

{% block grid_content %}
<table border="1" style="color: red;">
    {% block grid_header %}
        <thead>
            <tr>
                {% for field in datagrid.columns %}
                    {% block grid_header_field %}
                        <th>
                            {{ field.label }}
                            {% if datagrid.getSorter(field.name) %}
                                {% set sorter = datagrid.getSorter(field.name) %}
                                &nbsp;
                                {% if sorter.direction == 'DESC' %}
                                    <b style="color: green">&uarr;</b>
                                {% else %}
                                    <a href="{{ datagrid.routeGenerator.generateSortUrl(datagrid.parameters, sorter.field, 'DESC') }}"
                                       title="{{ 'oro_grid.link.sort_desc'|trans({}, 'OroGridBundle') }}"
                                       style="color: #ffffff"
                                    >
                                        &uarr;
                                    </a>
                                {% endif %}
                                &nbsp;
                                {% if sorter.getDirection() == 'ASC' %}
                                    <b style="color: green">&darr;</b>
                                {% else %}
                                    <a href="{{ datagrid.routeGenerator.generateSortUrl(datagrid.parameters, sorter.field, 'ASC') }}"
                                       title="{{ 'oro_grid.link.sort_asc'|trans({}, 'OroGridBundle') }}"
                                       style="color: #ffffff"
                                    >
                                        &darr;
                                    </a>
                                {% endif %}
                                &nbsp;
                            {% endif %}
                        </th>
                    {% endblock %}
                {% endfor %}
            </tr>
        </thead>
    {% endblock %}
    {% block grid_body %}
        <tbody>
            {% for row in datagrid.results %}
                {% block grid_body_row %}
                    <tr>
                        {% for field in datagrid.columns %}
                            {% block grid_body_row_field %}
                                <td>{{ attribute(row, field.name) }}</td>
                            {% endblock %}
                        {% endfor %}
                    </tr>
                {% endblock %}
            {% endfor %}
        </tbody>
    {% endblock %}
    {% block grid_footer %}
        <tfoot>
        {% if datagrid.pager.haveToPaginate() %}
            <tr>
                <td colspan="{{ datagrid.columns|length }}">
                    <div class="pagination pagination-centered">
                        <ul>
                            {% if datagrid.pager.page != datagrid.pager.firstpage  %}
                                <li><a href="{{ datagrid.routeGenerator.generatePagerUrl(datagrid.parameters, datagrid.pager.firstpage) }}" title="{{ 'link_first_pager'|trans({}, 'OroGridBundle') }}">&laquo;</a></li>
                            {% endif %}

                            {% if datagrid.pager.page != datagrid.pager.previouspage %}
                                <li><a href="{{ datagrid.routeGenerator.generatePagerUrl(datagrid.parameters, datagrid.pager.previouspage) }}" title="{{ 'link_previous_pager'|trans({}, 'OroGridBundle') }}">&lsaquo;</a></li>
                            {% endif %}

                            {# Set the number of pages to display in the pager #}
                            {% for page in datagrid.pager.getLinks() %}
                                <li {% if page == datagrid.pager.page %}class="active"{% endif %}>
                                    <a href="{{ datagrid.routeGenerator.generatePagerUrl(datagrid.parameters, page) }}">{{ page }}</a>
                                </li>
                            {% endfor %}

                            {% if datagrid.pager.page != datagrid.pager.nextpage %}
                                <li><a href="{{ datagrid.routeGenerator.generatePagerUrl(datagrid.parameters, datagrid.pager.nextpage) }}" title="{{ 'link_next_pager'|trans({}, 'OroGridBundle') }}">&rsaquo;</a></li>
                            {% endif %}

                            {% if datagrid.pager.page != datagrid.pager.lastpage  %}
                                <li><a href="{{ datagrid.routeGenerator.generatePagerUrl(datagrid.parameters, datagrid.pager.lastpage) }}" title="{{ 'link_last_pager'|trans({}, 'OroGridBundle') }}">&raquo;</a></li>
                            {% endif %}
                        </ul>
                    </div>
                </td>
            </tr>
        {% endif %}
        </tfoot>
    {% endblock %}
</table>
{% endblock %}
