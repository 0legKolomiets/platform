{% extends 'OroUserBundle::layout.html.twig' %}

{% block bodyClass %}login-page{% endblock %}

{% block title %}{{ 'Password reset request'|trans }} - {{ parent() }}{% endblock %}

{% block content %}
<form action="{{ path('oro_user_reset_send_email') }}" method="POST" class="form-signin">
    <div class="title-box">
        <h1 class="oro-title">Oro</h1>
        <span class="divider-vertical"></span>
        <h2 class="title">{{ 'Forgot password'|trans }}</h2>
    </div>
    {% if invalid_username is defined %}
        <div class="well-small-oro">
            <div class="alert alert-error">
                {{ 'The username or email address "%username%" does not exist.'|trans({ '%username%': invalid_username }) }}
            </div>
        </div>
    {% endif %}
    <fieldset>
        <div class="input-prepend">
            <span class="add-on">{{ 'Email'|trans }}</span>
            <input type="text" id="prependedInput" class="span2" name="username" required="required" placeholder="{{ 'Username or Email'|trans }}" />
        </div>
        <div class="form-row">
            <button type="submit" class="btn btn-large extra-submit btn-primary">{{ 'Request'|trans }}</button>
            <a href="{{ path('oro_user_security_login') }}" class="btn extra-btn-large btn-large">{{ 'Cancel'|trans }}</a>
        </div>
    </fieldset>
</form>
{% endblock %}
