{% block grid_filter %}
    {% if datagrid.filters %}
        <form action="{{ path(routeName) }}" method="GET">
            <fieldset>

                <table border="1" style="color: red;">
                    {% for filter in datagrid.filters %}
                    <tr>
                        <td>{{ filter.label|trans }}</td>
                        <td>{{ form_widget(form.children[filter.formName].children['type']) }}</td>
                        <td>{{ form_widget(form.children[filter.formName].children['value']) }}</td>
                    </tr>
                    {% endfor %}
                </table>

                {{ form_widget(form._sort_by) }}

                <input type="hidden" name="filter[_page]" id="filter__page" value="1" />

                {% set foo = form.children['_page'].setRendered() %}
                {{ form_rest(form) }}

                <input type="submit" value="{{ 'Filter'|trans }}" />

                <a href="{{ path(routeName) }}">{{ 'Reset'|trans }}</a>

            </fieldset>
        </form>
    {% endif %}
{% endblock %}

{% block grid_content %}
<table border="1" style="color: red;">
    {% block grid_header %}
        <thead>
            <tr>
                {% for field in datagrid.columns %}
                    {% block grid_header_field %}
                        <th>{{ field.label }}</th>
                    {% endblock %}
                {% endfor %}
            </tr>
        </thead>
    {% endblock %}
    {% block grid_body %}
        <tbody>
            {% for row in datagrid.results %}
                {% block grid_body_row %}
                    <tr>
                        {% for field in datagrid.columns %}
                            {% block grid_body_row_field %}
                                <td>{{ attribute(row, field.name) }}</td>
                            {% endblock %}
                        {% endfor %}
                    </tr>
                {% endblock %}
            {% endfor %}
        </tbody>
    {% endblock %}
    {% block grid_footer %}
        <tfoot>
        </tfoot>
    {% endblock %}
</table>
{% endblock %}
